<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo base (neón azul o imagen de fondo interna del card) -->
    <item android:drawable="@drawable/fondo2" />

    <!-- Marco magenta semitransparente del formulario -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="2dp"
                android:color="#FF00AAFF"/> <!-- color neón/magenta -->
            <corners android:radius="30dp"/>
            <padding android:left="8dp" android:right="8dp"
                android:top="8dp" android:bottom="8dp"/>
        </shape>
    </item>

</layer-list>
