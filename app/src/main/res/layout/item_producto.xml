<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Contenedor de imagen con botÃ³n flotante -->
    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginEnd="12dp">

        <ImageView
            android:id="@+id/ivProductoImagen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Imagen del producto"/>

        <ImageButton
            android:id="@+id/btnEditarProducto"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="top|end"
            android:layout_margin="4dp"
            android:background="@android:drawable/screen_background_dark_transparent"
            android:contentDescription="Editar producto"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_edit"
            android:tint="@android:color/white" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvProductoNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tvProductoDimensiones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvProductoPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/teal_200"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvProductoStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tvProductoDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

</LinearLayout>