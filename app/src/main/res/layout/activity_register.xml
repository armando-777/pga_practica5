<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"  xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/fondo"
    tools:context=".app.RegisterActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="516dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/combined_background"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/RText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrar Cliente"
                android:textAlignment="center"
                android:textColor="@color/teal_200"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Completar todos los datos"
                android:textAlignment="center"
                android:textColor="@color/teal_200"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/register_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="8dp"
                android:hint="Nombre"
                android:padding="8dp"
                android:textColor="@color/teal_200"
                android:textColorHint="@color/teal_200" />

            <EditText
                android:id="@+id/register_last_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/ic_baseline_supervisor_account_24"
                android:drawablePadding="8dp"
                android:hint="Apellido"
                android:padding="8dp"
                android:textColor="@color/teal_200"
                android:textColorHint="@color/teal_200" />

            <EditText
                android:id="@+id/register_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="8dp"
                android:hint="Correo Electrónico"
                android:padding="8dp"
                android:textColor="@color/teal_200"
                android:textColorHint="@color/teal_200" />

            <EditText
                android:id="@+id/register_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/ic_baseline_phone_iphone_24"
                android:drawablePadding="8dp"
                android:hint="Teléfono"
                android:padding="8dp"
                android:textColor="@color/teal_200"
                android:textColorHint="@color/teal_200" />

            <EditText
                android:id="@+id/register_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:drawablePadding="8dp"
                android:hint="Dirección"
                android:padding="8dp"
                android:textColor="@color/teal_200"
                android:textColorHint="@color/teal_200" />

            <Button
                android:id="@+id/registButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/purple"
                android:text="Registrar"
                android:textColor="@color/teal_200"
                android:textSize="18sp"
                app:cornerRadius="20dp"
                app:strokeColor="@color/blue_border"
                app:strokeWidth="2dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>