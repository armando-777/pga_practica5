<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/fondo"
    tools:context=".app.PanelActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="445dp"
            android:background="@drawable/combined_background"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Títulos -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="PANEL DE GESTIÓN"
                android:textAlignment="center"
                android:textColor="@color/teal_200"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Aquí va la cuadrícula con 4 botones -->
            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Bienvenido, Usuario"
                android:textAlignment="center"
                android:textColor="@color/teal_200"
                android:textSize="18sp" />

            <GridLayout
                android:id="@+id/gridPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:rowCount="2"
                android:rowOrderPreserved="false">

                <!-- Botón Ventas -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/ventas" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VENTAS"
                        android:textColor="@color/teal_200"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Botón Productos -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/producto" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PRODUCTOS"
                        android:textColor="@color/teal_200"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Botón Clientes -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/clientes" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CLIENTES"
                        android:textColor="@color/teal_200"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Botón Usuarios -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/usuario" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USUARIOS"
                        android:textColor="@color/teal_200"
                        android:textStyle="bold" />
                </LinearLayout>

            </GridLayout>

            <!-- Botón Cerrar Sesión -->
            <Button
                android:id="@+id/btnCerrarSesion"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/purple"
                android:text="Cerrar Sesión"
                android:textColor="@color/teal_200"
                android:textSize="16sp"
                app:cornerRadius="20dp"
                app:strokeColor="@color/blue_border"
                app:strokeWidth="2dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
